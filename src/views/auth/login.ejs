                        <path fill="#4CAF50"
                            d="M24,44c5.18,0,9.899-1.977,13.453-5.197l-6.207-5.238C29.132,35.49,26.689,36,24,36 c-5.189,0-9.594-3.317-11.271-7.946l-6.5,5.02C9.568,39.787,16.302,44,24,44z" />
                        <path fill="#1976D2"
