<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignación | SGER</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            margin: 0;
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
            background: #f6f7fb;
        }

        .layout {
            display: grid;
            grid-template-columns: 240px 1fr;
            min-height: 100vh;
        }

        .sidebar {
            background: #1f2937;
            color: #fff;
            padding: 16px;
        }

        .sidebar h2 {
            font-size: 18px;
            margin: 0 0 16px;
        }

        .sidebar a {
            display: block;
            color: #cbd5e1;
            text-decoration: none;
            padding: 10px 12px;
            border-radius: 8px;
            margin-bottom: 6px;
        }

        .sidebar a:hover {
            background: #374151;
            color: #fff;
        }

        .content {
            padding: 24px;
        }

        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .topbar .title {
            font-size: 22px;
            font-weight: 600;
            color: #111827;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            display: inline-block;
            padding: 10px 14px;
            border-radius: 10px;
            text-decoration: none;
            border: 1px solid #e5e7eb;
            background: #fff;
            color: #111827;
        }

        .btn-primary {
            background: #2563eb;
            border-color: #2563eb;
            color: #fff;
        }

        .card {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 16px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
        }

        label {
            color: #374151;
            font-size: 14px;
        }

        select {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
        }

        .field {
            margin-bottom: 14px;
        }
    </style>
</head>

<body>
    <div class="layout">
        <aside class="sidebar">
            <h2>Menú</h2>
            <a href="/dashboard">Dashboard</a>
            <a href="/usuarios">Usuarios</a>
            <a href="/repartidores">Repartidores</a>
            <a href="/pedidos">Pedidos</a>
            <a href="/zonas">Zonas</a>
            <a href="/asignacion">Asignación</a>
            <a href="/auth/perfil">Perfil</a>
            <a href="/auth/logout">Salir</a>
        </aside>

        <main class="content">
            <div class="topbar">
                <div class="title">Asignar Pedido a Repartidor</div>
                <div class="actions">
                    <a class="btn" href="/pedidos">Lista de Pedidos</a>
                    <a class="btn" href="/repartidores">Lista de Repartidores</a>
                </div>
            </div>

            <div class="card">
                <form action="/asignacion" method="POST">
                    <div class="field">
                        <label for="pedido">Pedido</label>
                        <select id="pedido" name="pedido_id">
                            <% pedidos.forEach(p=> { %>
                                <option value="<%= p._id %>" data-zona="<%= p.__zona || p.zona %>">
                                    <%= p.cliente.nombre %> - <%= p.__zona || p.zona %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="field">
                        <label for="repartidor">Repartidor</label>
                        <select id="repartidor" name="repartidor_id">
                            <% repartidores.forEach(r=> { %>
                                <option value="<%= r._id %>" data-zona="<%= r.zona_asignada %>">
                                    <%= (r.usuario_id && r.usuario_id.nombre) || (r.usuario && r.usuario.nombre) %> - <%= r.zona_asignada %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Asignar</button>
                </form>
            </div>
        </main>
    </div>
    <script>
        // Filtrar repartidores por la zona del pedido seleccionado
        const pedidoSelect = document.getElementById('pedido');
        const repartidorSelect = document.getElementById('repartidor');
        const allRepOptions = Array.from(repartidorSelect.querySelectorAll('option'));

        function filterRepartidoresByZona(zona) {
            const z = String(zona || '').toLowerCase();
            repartidorSelect.innerHTML = '';
            const filtered = allRepOptions.filter(opt => String(opt.dataset.zona || '').toLowerCase() === z);
            if (filtered.length === 0) {
                const opt = document.createElement('option');
                opt.value = '';
                opt.textContent = 'No hay repartidores para zona ' + zona;
                repartidorSelect.appendChild(opt);
            } else {
                filtered.forEach(opt => repartidorSelect.appendChild(opt.cloneNode(true)));
            }
        }

        // Initial filter on load
        const initialZona = pedidoSelect.options[pedidoSelect.selectedIndex]?.dataset.zona;
        if (initialZona) filterRepartidoresByZona(initialZona);

        pedidoSelect.addEventListener('change', (e) => {
            const zona = e.target.options[e.target.selectedIndex].dataset.zona;
            filterRepartidoresByZona(zona);
        });
    </script>
</body>

</html>