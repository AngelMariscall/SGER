<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos | SGER</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            margin: 0;
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
            background: #f6f7fb;
        }

        .layout {
            display: grid;
            grid-template-columns: 240px 1fr;
            min-height: 100vh;
        }

        .sidebar {
            background: #1f2937;
            color: #fff;
            padding: 16px;
        }

        .sidebar h2 {
            font-size: 18px;
            margin: 0 0 16px;
        }

        .sidebar a {
            display: block;
            color: #cbd5e1;
            text-decoration: none;
            padding: 10px 12px;
            border-radius: 8px;
            margin-bottom: 6px;
        }

        .sidebar a:hover {
            background: #374151;
            color: #fff;
        }

        .content {
            padding: 24px;
        }

        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .topbar .title {
            font-size: 22px;
            font-weight: 600;
            color: #111827;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            display: inline-block;
            padding: 10px 14px;
            border-radius: 10px;
            text-decoration: none;
            border: 1px solid #e5e7eb;
            background: #fff;
            color: #111827;
        }

        .btn-primary {
            background: #2563eb;
            border-color: #2563eb;
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            overflow: hidden;
        }

        thead {
            background: #eff6ff;
        }

        th,
        td {
            padding: 12px 14px;
            border-bottom: 1px solid #e5e7eb;
            color: #111827;
        }

        tr:hover {
            background: #fafafa;
        }

        .card-footer {
            margin-top: 16px;
            color: #6b7280;
        }

        .link {
            color: #2563eb;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="layout">
        <aside class="sidebar">
            <h2>Menú</h2>
            <a href="/dashboard">Dashboard</a>
            <a href="/usuarios">Usuarios</a>
            <a href="/repartidores">Repartidores</a>
            <a href="/pedidos">Pedidos</a>
            <a href="/zonas">Zonas</a>
            <a href="/asignacion">Asignación</a>
            <a href="/auth/perfil">Perfil</a>
            <a href="/auth/logout">Salir</a>
        </aside>

        <main class="content">
            <div class="topbar">
                <div class="title">Pedidos</div>
                <div class="actions">
                    <a class="btn btn-primary" href="/pedidos/nuevo">Nuevo Pedido</a>
                </div>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Dirección</th>
                        <th>Zona</th>
                        <th>Detalles</th>
                        <th>Total</th>
                        <th>Estatus</th>
                        <th>Repartidor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% pedidos.forEach(function(p){ %>
                        <tr>
                            <td>
                                <%= p.cliente && p.cliente.nombre ? p.cliente.nombre : '-' %>
                            </td>
                            <td>
                                <%= p.direccion && p.direccion.calle ? p.direccion.calle : '-' %>,
                                    <%= p.direccion && p.direccion.localidad ? p.direccion.localidad : '-' %>,
                                        <%= p.direccion && p.direccion.ciudad ? p.direccion.ciudad : '-' %>
                            </td>
                            <td>
                                <%= p.__zona || p.zona %>
                            </td>
                            <td>
                                <% if (p.detalles && p.detalles.length) { %>
                                    <% p.detalles.forEach(function(d){ %>
                                        <div>
                                            <%= d.cantidad %> x <%= d.producto %> ($<%= d.precio %>)
                                        </div>
                                        <% }) %>
                                            <% } else { %>
                                                <span>-</span>
                                                <% } %>
                            </td>
                            <td>$<%= p.total %>
                            </td>
                            <td>
                                <%= p.estatus %>
                            </td>
                            <% const repNombre=(p.repartidor_nombre && p.repartidor_nombre.length) ? p.repartidor_nombre
                                : (p.__repartidorNombre ? p.__repartidorNombre : (p.repartidor_id ?
                                String(p.repartidor_id) : 'Sin asignar' )); %>
                                <td>
                                    <%= repNombre %>
                                </td>
                                <td>
                                    <a class="link" href="/pedidos/<%= p._id %>?zona=<%= p.__zona || p.zona %>">Ver
                                        detalle</a>
                                </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <div class="card-footer">Total: <%= pedidos.length %> pedidos</div>
        </main>
    </div>

</body>

</html>